{
  "compilerOptions": {
    "outDir": "./dist",
    "sourceRoot": "./src",
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "target": "es6",
    "types": [
      "node"
    ],
    "lib": [
      "es2015",
      "es2017",
      "dom"
    ],
    "removeComments": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "allowJs": true,
    "baseUrl": "./"
  },
  "include": [
    "**/*.ts"
  ]
}
